<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        <input type="search" id="search" value="" class="form-control" placeholder="Search using Fuzzy searching">
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>CreatedBy</th>
            <th>Assignee</th>
            <th>Priority</th>
            <th>Time</th>
            <th>Current Status</th>
            <th>Tickettype</th>


        </tr>
        </thead>
        <tbody>
        <tbody>

    {{#if tickets}}
        {{#each tickets}}
            <tr class="rows">
                <td>{{ this.title }}</td>
                <td>{{ this.description }}</td>
                <td>{{ this.createdby }}</td>
                <td>{{ this.assignee }}</td>
                <td>{{ this.priority }}</td>
                <td>{{ this.time }}</td>
                <td>{{ this.status }}</td>
                <td>{{ this.tickettype }}</td>



                <td><a class="nav-link active" style="font-family:SansSerif;font-size: 20px;color:#0e8eab" href="/tickettype/details?ticketid={{ this.ticketid }}">View Details</td>


            </tr>
        {{/each}}
        {{else}}

        {{#each tasks}}
            <tr class="rows">
                <td>{{ this.title }}</td>
                <td>{{ this.description }}</td>
                <td>{{ this.createdby }}</td>
                <td>{{ this.assignee }}</td>
                <td>{{ this.priority }}</td>
                <td>{{ this.time }}</td>
                <td>{{ this.status }}</td>


                <td><a class="nav-link active" style="font-family:SansSerif;font-size: 20px;color:#0e8eab" href="/tickettype/taskinfo?taskid={{ this.taskid }}">View Details</td>


            </tr>
        {{/each}}


{{/if}}

        </tbody>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    var $rows = $('#table tr');
    $('#search').keyup(function() {
        var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();
        console.log('Val',$rows)
        $rows.show().filter(function() {
            var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
            return !~text.indexOf(val);
        }).hide();
    });

</script>

