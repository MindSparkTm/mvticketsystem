<html>
<head>
    <link rel='stylesheet' href='/stylesheets/bootstrap/bootstrap.min.css'/>
    <link rel='stylesheet' href='/stylesheets/login.css'/>
    <script src="/javascripts/jquery.min.js"></script>
    <link rel="shortcut icon" type="image/png" href="/images/favicon.png"/>

</head>
</html>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">MV-SDesk Sign In</h5>
                    <hr align="middle" width="20%">

                    <form class="form-signin">
                        <div class="form-label-group">
                            <span class="badge badge-secondary">Email address</span><input type="email" id="logemail" class="form-control" placeholder="Email address" required >
                        </div>

                        <div class="form-label-group">
                            <span class="badge badge-secondary">Password</span> <input type="password" id="logpassword" class="form-control" placeholder="Password" required>
                        </div>

                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" id="loginbtn" type="submit">Sign in</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">


    $('#loginbtn').click(function (e) {
        email = $('#logemail').val()
        password = $('#logpassword').val()

        postData = JSON.stringify({'logemail':email,'logpassword':password})
        console.log('postdata',postData)
        e.preventDefault()
        $.ajax({
            type: 'POST',
            url: "/mv/signup",
            data: postData,
            dataType: "json",
            contentType: "application/json",
            success: function (resultData) {
                alert('Login Successful')
                location.href="/"
            },

            error: function (error) {
                alert('Incorrect username and Password,Try again')

            }
        })

    })


</script>
</body>